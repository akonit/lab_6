<h1>Добавить сеанс</h1>

<%= form_for :session, url: sessions_path do |f| %>

  <p>
    <%= f.label :фильм %><br>
    <%= f.select :film_id, options_for_select(@films.map{ |c| [c.name, c.id] }) %>
  </p>

  <p>
    <%= f.label :кинотеатр %><br>
    <%= f.select :cinema_id, options_for_select(@cinemas.map{ |c| [c.name, c.id] }) %><br>
  </p>

  <p>
    <%= f.label :начало_сеанса %><br>
    <%= f.datetime_select :start, :order => [:year, :month, :day, :hour, :minute] %>
  </p>
 
  <p>
    <%= f.label :окончание_сеанса %><br>
    <%= f.datetime_select :end, :order => [:year, :month, :day, :hour, :minute] %>
  </p>
  
  <p>
    <%= f.submit :сохранить%>
  </p>
<% end %>

<%= link_to 'Назад', sessions_path %>